{
  "manifest_version": 2,

  "name": "BigotBlocker",
  "version": "0.0.1",
  "description": "This extension allows you to block undesireables on voat.co.",
  "icons": { "128": "icon-512.png" },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://voat.co/*"],
      "css": ["blocker.css"],
      "js": ["blocker.js"]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}